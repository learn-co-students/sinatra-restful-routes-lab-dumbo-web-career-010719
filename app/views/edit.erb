<h1>Edit <%= @recipe.name %> Recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Recipe Name: <input type="text" name="name" value="<%=@recipe.name%>">
  Recipe Ingredient: <input type="text" name="ingredients" value="<%=@recipe.ingredients%>">
  Recipe Cook Time: <input type="text" name="cook_time" value="<%=@recipe.cook_time%>">
  <input type="submit" id="Submit">
</form>
